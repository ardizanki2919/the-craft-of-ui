---
import { clsx } from "clsx";
import { Font, Image } from "astro:assets";
import WaitlistForm from "@components/waitlist-form/index.astro";
import headshot from "../assets/headshot.jpeg";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Font cssVariable="--font-serif" preload />
    <Font cssVariable="--font-sans" preload />
    <title>The Craft of UI</title>
  </head>
  <body class="font-sans">
    <div
      class="z-50 h-[var(--header-height)] sticky top-0 flex items-center justify-between px-[var(--gutter)]"
    >
      <a aria-label="Home" href="/">
        <svg
          class="w-7 opacity-80"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path d="M6 3h12l4 6-10 13L2 9Z"></path><path
            d="M11 3 8 9l4 13 4-13-3-6"></path><path d="M2 9h20"></path></svg
        >
      </a>
      <nav class="flex gap-x-4 items-center">
        <a href="https://newsletter.craftofui.com" target="_blank">Blog</a>
        <a href="#">Join Waitlist</a>
      </nav>
    </div>
    <div
      class={clsx(
        "[--start:var(--header-height)] lg:[--start:0]",
        "fixed inset-0 overflow-auto pb-[calc(var(--header-height)*2)]",
        "[mask:linear-gradient(#0000_var(--start),#fff_calc(var(--header-height))_calc(100%-(var(--header-height)*1)),#0000_calc(100%))]",
      )}
    >
      <div
        class={clsx(
          "w-[var(--content)] max-w-[calc(100vw-(2*var(--gutter)))] mx-auto min-h-[100svh]",
          "pt-[calc(2*var(--header-height))]",
        )}
      >
        <header class="mb-48 text-[canvasText]">
          <p
            class="text-sm text-gray-800 dark:text-gray-200 mb-4 flex items-center font-[200]"
          >
            The Craft of UI â€” by&nbsp;<a
              aria-label="Jhey Tompkins"
              class="flex items-center gap-x-2 hover:text-red-500 outline-red-500"
              href="https://twitter.com/intent/follow?screen_name=jh3yy"
              target="_blank"
              >Jhey Tompkins<Image
                class="rounded-full"
                src={headshot}
                alt=""
                width={28}
                height={28}
              /></a
            >
          </p>
          <h1 class="font-serif text-fluid [--font-level:4] leading-none mb-6">
            What if you could build <span class="text-red-400">anything</span>?
          </h1>
          <p class="text-fluid [--font-level:0.6] leading-[1.25] font-[200]">
            Master the tools, thinking, and techniques behind crafting
            exceptional user interfaces with HTML, CSS, and JavaScript
          </p>
        </header>
        <main class={clsx("[&_p]:mb-8 leading-[1.5] [&_p]:text-md")}>
          <WaitlistForm id="header" />
          <slot />
          <WaitlistForm id="footer" />
        </main>
      </div>
    </div>
  </body>
</html>
