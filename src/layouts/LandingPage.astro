---
import { clsx } from "clsx";
import { Font, Image } from "astro:assets";
import WaitlistForm from "@components/waitlist-form/index.astro";
import headshot from "../assets/headshot.jpeg";
import "../styles/global.css";

const title = "The Craft of UI";
const description =
  "Master crafting exceptional user interfaces with Jhey Tompkins";
const ogImageUrl = "";
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="description" property="og:description" content={description} />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000" />
    <link rel="manifest" href="/manifest.json" />
    <link
      rel="icon"
      href="/icons/favicon-32x32.png"
      type="image/png"
      sizes="16x16"
    />
    <link rel="shortcut icon" href="/icons/favicon-32x32.png" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:site_name" content={title} />
    <meta property="og:title" content={title} />
    <meta name="author" content="Jhey Tompkins" />
    <meta name="image" content={ogImageUrl} />
    <meta name="image" property="og:image" content={ogImageUrl} />
    <meta name="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jhey.dev/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@jh3yy" />
  </head>
  <body class="font-sans">
    <div
      class="z-50 h-[var(--header-height)] sticky top-0 flex items-center justify-between px-[var(--gutter)]"
    >
      <a aria-label="Home" href="/">
        <svg
          class="w-7 opacity-60 hover:opacity-100"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="canvasText"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path d="M6 3h12l4 6-10 13L2 9Z"></path><path
            d="M11 3 8 9l4 13 4-13-3-6"></path><path d="M2 9h20"></path></svg
        >
      </a>
      <nav class="flex gap-x-4 items-center">
        <a href="https://craftofui.substack.com/" target="_blank">Blog</a>
        <a
          class={clsx(
            "rounded-md bg-linear-180 from-white/10 bg-red-500 px-4 py-1 text-gray-100 relative",
            "shadow-inner shadow-gray-900/20 motion-safe:transition-all",
            "active:scale-[0.98] h-9 grid place-items-center",
            "after:content-[''] after:absolute after:inset-0 after:rounded-md",
            "after:bg-linear-180 after:from-white/40 after:to-white/10",
            "after:opacity-70 hover:after:opacity-100 after:motion-safe:transition-all",
          )}
          href="#waitlist"
        >
          <span
            class="text-shadow-lg [text-shadow:0_1px_1px_var(--color-red-800)]"
          >
            Waitlist
          </span>
        </a>
      </nav>
    </div>
    <!-- main content that's masked off -->
    <div
      class={clsx(
        "[--start:var(--header-height)] lg:[--start:0] [--end:calc(2*var(--header-height))] lg:[--end:var(--header-height)]",
        "fixed inset-0 overflow-auto pb-[calc(var(--header-height)*1)] min-h-screen mask-content",
      )}
    >
      <div
        class={clsx(
          "w-[var(--content)] max-w-[calc(100vw-(2*var(--gutter)))] mx-auto",
          "pt-[calc(2*var(--header-height))] pb-[var(--header-height)]",
        )}
      >
        <header class="text-[canvasText]">
          <p
            class="text-sm text-gray-800 dark:text-gray-200 mb-4 flex items-center font-[200]"
          >
            The Craft of UI — by&nbsp;<a
              aria-label="Jhey Tompkins"
              class="flex items-center gap-x-2 hover:text-red-400 outline-red-500"
              href="https://twitter.com/intent/follow?screen_name=jh3yy"
              target="_blank"
              >Jhey Tompkins<Image
                class="rounded-full"
                src={headshot}
                alt=""
                width={28}
                height={28}
              /></a
            >
          </p>
          <h1
            class="font-serif text-fluid [--font-size-min:20] [--font-level:4] leading-none mb-6"
          >
            What if you could build <span class="text-red-400">anything</span>?
          </h1>
          <p
            class="text-fluid [--font-level:0.6] leading-[1.25] font-[200] text-balance"
          >
            Master the tools, mindset, and techniques behind crafting
            exceptional user interfaces with HTML, CSS, and JavaScript
          </p>
        </header>
        <main class={clsx("[&>p]:mb-8 leading-[1.5] [&_p]:text-md")}>
          <WaitlistForm id="header" />
          <slot />
          <div class="relative text-[canvasText] flex justify-end">
            <svg
              class="sig"
              viewBox="0 0 271 209"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M40.3725 26.8984C58.6558 41.1564 141.659 43.1867 128.248 5.48254C127.911 4.53766 127.085 2.2403 125.938 2.0095C124.714 1.76297 121.929 6.39448 121.627 6.82375C100.965 36.1863 95.2641 73.5992 74.5923 102.644C63.7045 117.942 14.7891 145.678 5.55986 113.481C-17.5939 32.705 78.7483 76.0672 105.741 67.4678C119.757 63.0021 125.297 50.6825 132.831 39.1622C135.218 35.5126 137.628 24.6153 140.043 28.2467C144.771 35.3581 119.642 69.8761 115.559 78.4692C110.959 88.1482 129.228 46.7461 136.796 54.3333C146.229 63.7897 128.236 82.7359 153.367 61.6804C157.634 58.1059 166.582 46.4029 161.033 46.8455C153.977 47.4085 141.565 67.0198 151.685 70.0327C161.531 72.9635 176.039 38.7196 174.012 48.7901C173.009 53.769 168.343 67.3695 175.978 68.9069C186.537 71.0328 191.574 35.8659 197.537 44.8359C240.356 109.24 81.7126 283.324 50.2184 167.261C25.2159 75.1229 240.563 89.2082 268.88 137.08"
                stroke="currentColor"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"
                pathLength="1"
                style="--path-speed: 0.831875"></path>
              <path
                class="ear"
                d="M187.183 101.246C182.107 82.5407 155.739 77.9455 151.5 99"
                stroke="currentColor"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"
                pathLength="1"
                style="--path-speed: 0.031875; --path-delay: 0.831875"></path>
              <path
                class="ear"
                d="M117.998 100.704C117.998 91.1516 103.912 87.3662 96.5585 89.3717C84.7816 92.5836 80.6315 99.053 80.6315 110.505"
                stroke="currentColor"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"
                pathLength="1"
                style="--path-speed: 0.035625; --path-delay: 0.86375"></path>
              <path
                class="eye"
                d="M170.025 108.347C168.627 105.551 162.781 110.631 165.494 114.577C168.207 118.523 173.936 114.091 171.643 109.965C171.035 108.871 168.547 107.832 167.355 108.428"
                stroke="currentColor"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"
                pathLength="1"
                style="--path-speed: 0.0175; --path-delay: 0.899375"></path>
              <path
                class="eye"
                d="M102.952 112.797C97.2672 112.797 96.7371 120.527 102.224 119.917C108.363 119.235 105.409 110.012 100.363 113.04"
                stroke="currentColor"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"
                pathLength="1"
                style="--path-speed: 0.01625; --path-delay: 0.916875"></path>
              <path
                class="nose"
                d="M144.745 123.82C146.652 122.562 141.479 121.621 140.561 121.402C136.485 120.429 124.736 118.793 124.42 125.721C123.695 141.628 160.767 131.457 140.492 121.735"
                stroke="currentColor"
                stroke-width="4"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"
                pathLength="1"
                style="--path-speed: 0.04; --path-delay: 0.933125"></path>
            </svg>
          </div>
          <WaitlistForm id="waitlist" />
        </main>
        <footer class="text-center text-xs">
          ʕ•ᴥ•ʔ&nbsp;&copy; Jhey Tompkins&nbsp;{new Date().getFullYear()}
        </footer>
      </div>
    </div>
  </body>
</html>
